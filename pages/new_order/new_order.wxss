@import "../../css/base.wxss";
@import "../../template/card_style_template.wxss";

.scroll-list-block {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 1107rpx;
}

/************       地址栏        ***********/

.address-block {
  display: flex;
  padding: 30rpx;
  border-width: 0 0 30rpx 0;
  border-color: #f6f6f6;
  border-style: solid;
}

.address-block>.selected-addr {
  display: flex;
  align-items: center;
}

.address-block .location-icon {
  width: 60rpx;
  height: 60rpx;
}

.address-block>.selected-addr text {
  margin-left: 20rpx;
  color: #397ef5;
}

/*************   收件人信息   ****************/

.address-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.address-info>.left {
  display: flex;
  align-items: center;
}

.address-info>.left>.middle {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  max-width: 550rpx;
}

.address-info>.left>.middle>.top {
  display: flex;
  justify-content: space-between;
}

.address-info>.left>.middle>.bottom {
  display: flex;
  margin-top: 12rpx;
}

.address-info>.left>.middle>.bottom>.addr-title {
  white-space: nowrap;
}

.address-info>.right>image {
  width: 48rpx;
  height: 48rpx;
}

/***********************   订单商品    ******************************/

.body-block {
  display: flex;
  flex-direction: column;
}

.goods-list-block {
  display: flex;
  flex-direction: column;
  margin: 0rpx 30rpx;
  padding: 40rpx 0rpx;
  border-width: 0 0 1px 0;
  border-color: #f8f8f8;
  border-style: solid;
}

.list-content {
  display: flex;
  flex-direction: column;
  background-color: white;
  align-items: center;
}

.list-content .goods {
  display: flex;
  justify-content: center;
  align-items: center;
}

/********************    选项区块设置  ***********************/

.logistics-block,.discount-block,.connect-person-block,.leave-message-block {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0rpx 30rpx;
  padding: 30rpx 0rpx;
  border-width: 0 0 1px 0;
  border-color: #f8f8f8;
  border-style: solid;
}

.leave-message-block>.content {
  display: flex;
  align-items: center;
  width: 100%;
}

.leave-message-block>.content>input {
  color: #b2b2b2;
  flex-grow: 1;
  width: auto;
}

/*******************          底部          ***************/

.footer-block {
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 99rpx;
  background-color: white;
  border-width: 1rpx 0 0 0;
  border-color: #e5e5e5;
  border-style: solid;
}

.footer-block>.price {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 100%;
}

.footer-block>.price>.total-price {
  margin-left: 10rpx;
  color: #ed1d5c;
}

.footer-block>.enter {
  display: flex;
  align-items: center;
  width: 50%;
  height: 100%;
}

.footer-block>.enter>text {
  color: white;
  padding: 13rpx 116rpx;
  text-align: center;
  background-color: #ff7b52;
  border-radius: 10rpx;
}

/**********************   选择板  *************************/
.selected-pan-block{
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.selected-pan-block>.shadow-pan-block{
  background-color: #2b2b2b;
  opacity: 0.8;
  width: 100%;
  height: auto;
  flex-grow:1;
}

.selected-pan-block>.coupon-pan-block{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 800rpx;
  background-color: white;
}

.selected-pan-block>.coupon-pan-block>.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  width: auto;
  height: 78rpx;
  border-width: 0 0 1rpx 0;
  border-color: #e5e5e5;
  border-style: solid;
}

.selected-pan-block>.coupon-pan-block>.header>.cancel{
  padding: 10rpx;
  text-align: center;
  color: #999;
}
.selected-pan-block>.coupon-pan-block>.header>.confirm{
  padding: 10rpx;
  text-align: center;
  color: #108EE9;
}

.selected-pan-block>.coupon-pan-block scroll-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 722rpx;
}

.selected-pan-block>.coupon-pan-block .coupon-content{
  display: flex;
  width: 100%;
  height: auto;
  justify-content: center;
  margin-top: 30rpx;
}

/****     选择item 模板        ****/

.payment-selected-item-template-block {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.payment-selected-item-template-block>.right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.payment-selected-item-template-block>.right>.desc{
  color: #b2b2b2;
}

.payment-selected-item-template-block .arrow {
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
}
