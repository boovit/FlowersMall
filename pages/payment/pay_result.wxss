@import "../../css/base.wxss";
@import "../../template/common_template.wxss";
@import "../../template/card_style_template.wxss";

.container{
  height: 100vh;
}

.result-block{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 355rpx;
  background-color: #FF7B52;
}

.result-block>.tips{
  display: flex;
  align-items: center;
}

.result-block>.tips>.icon{
  width: 47rpx;
  height: 47rpx;
}

.result-block>.tips>.text{
  color: white;
  margin-left: 15rpx;
}

.result-block>.price{
  color: white;
  margin-top: 30rpx;
}

.result-block>.button{
  display: flex;
  margin-top: 60rpx;
}

.result-block>.button>text{
  color: white;
  text-align: center;
  width: 260rpx;
  height: 32rpx;
  padding: 20rpx 0;
  border-width: 1rpx;
  border-color:white;
  border-style: solid;
  border-radius: 10rpx;
}


/********************    推荐模块    ************************/
.recommend-block{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  width: 100%;
}

.recommend-block>scroll-view{
  display: flex;
  flex-direction: column;
  width: 100%;
}

/****************************    通用模块  ****************************/

.common-block {
  display: flex;
  flex-direction: column;
}

.section-body {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 0 30rpx;
  width: auto;
}